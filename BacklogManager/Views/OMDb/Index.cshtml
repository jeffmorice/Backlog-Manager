@model IEnumerable<BacklogManager.Models.OMDbTitle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImdbId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImdbId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ImdbId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ImdbId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ImdbId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
