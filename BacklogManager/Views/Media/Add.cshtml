@model BacklogManager.ViewModels.AddMediaObjectViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>Add Media</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediaType" class="control-label"></label>
                <input asp-for="MediaType" class="form-control" />
                <span asp-validation-for="MediaType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatabaseSource" class="control-label"></label>
                <input asp-for="DatabaseSource" class="form-control" />
                <span asp-validation-for="DatabaseSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Started" /> @Html.DisplayNameFor(model => model.Started)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RecommendSource" class="control-label"></label>
                <input asp-for="RecommendSource" class="form-control" />
                <span asp-validation-for="RecommendSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

